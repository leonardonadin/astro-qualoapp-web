---
import SiteLayout from "../../layouts/SiteLayout.astro";

import apps from "../../data/apps.json";
import cities from "../../data/cities.json";

const { slug } = Astro.params;
const city = cities.find((city) => city.slug === slug);
if (!city) return Astro.redirect('/404');

const appsByCity = apps.filter((app) => app.cities.includes(city.name))
---
<SiteLayout title="Delivery">
    <div class="container">
        <div class="mb-3">
            <h1 class="display-4">
                Aplicativos
            </h1>
            <p class="lead">
                Aplicativos dispon√≠veis em { city.name }
            </p>
        </div>
        <div class="row">
            {appsByCity.map((app) =>
                <div class="col-12 col-md-4 col-xl-3">
                    <div class="card">
                        <img src={ app.logo_url } alt="" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                { app.name }
                            </h5>
                            <a href={ app.url } class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            )}
        </div>
    </div>
</SiteLayout>
